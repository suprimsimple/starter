{% extends "formie/_layout" %}

{% block content %}

	{{ parent() }}

	<mj-section background-color="#ffffff" padding-top="0px" padding-left="15px" padding-right="15px">

		<mj-column width="100%">
			<mj-button background-color="#1D4ED8" align="left" color="#FFFFFF" font-size="14px" font-weight="bold" href="{{ siteUrl }}admin/formie/submissions/edit/{{ submission.id }}">
				View submission in CMS
			</mj-button>
			<mj-button background-color="#1D4ED8" align="left" color="#FFFFFF" font-size="14px" font-weight="bold" href="{{ siteUrl }}admin/formie/submissions">
				View all submissions
			</mj-button>
			<mj-spacer height="20px" />
		</mj-column>

	</mj-section>

{% endblock %}
